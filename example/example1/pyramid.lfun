use sysout

>> number ONE
-> number LEVELS

@exec main begin
  printPyramid (LEVELS - ONE) LEVELS
end

>> number ZERO
>> number ONE
printPyramid ->number level ->number max begin
  if (level > ZERO) then
    return
  endif

  printStars (max - level)

  if (lvl = ONE) `printPyramid (level - ONE) max`

  printStars (max - level)
  
end


>> character STAR
>> character NEWLINE
printStars ->number num begin
  loop num `sysout STAR`
  sysout NEWLINE
end
