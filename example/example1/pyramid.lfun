use sysout
use loop

>> number ONE
-> number LEVELS

@exec main begin
  printPyramid (LEVELS - ONE) LEVELS
end

>> number ZERO
>> number ONE
printPyramid ->number level ->number max begin
  ifthen (level > ZERO) return

  printStars (max - level)

  if (lvl = ONE) then
    printPyramid (level - ONE) max
  endif

  printStars (max - level)
  
end


>> character STAR
>> character NEWLINE
printStars ->number num begin
  loop num `sysout STAR`
  sysout NEWLINE
end
