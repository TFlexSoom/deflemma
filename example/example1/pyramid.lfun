use sysout


>> int ONE
-> int LEVELS

@exec main {
  printPyramid (LEVELS - ONE) LEVELS 
}

>> int ZERO
>> int ONE
printPyramid ~int lvl ~int max {
  returnif (lvl < ZERO)

  printStars (max - lvl)

  if (lvl = ONE) {
    printPyramid (lvl - ONE) max
  }

  printStars (max - lvl)
}

>> char STAR
>> char NEWLINE
printStars ~int num {
  loop num {
    sysout STAR
  }

  sysout NEWLINE
}