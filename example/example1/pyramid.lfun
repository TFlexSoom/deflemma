use sysout

>> number ONE
-> number LEVELS

@exec main begin
  printPyramid (LEVELS - ONE) LEVELS 
end

>> number ZERO
>> number ONE
printPyramid ->number level ->number max begin
  returnif (greaterThan level ZERO)

  printStars (subtract max level)

  if (lvl = ONE) begin
    printPyramid (subtract level ONE) max
  end

  printStars (max - level)
end


>> character STAR
>> character NEWLINE
printStars ->number num begin
  loop num begin
    sysout STAR
  end

  sysout NEWLINE
end