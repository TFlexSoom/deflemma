use sysout

>> int ONE
-> int LEVELS

@exec main {
  printPyramid (LEVELS - ONE) LEVELS 
}

>> int ZERO
>> int ONE
printPyramid ~int level ~int max {
  endif (greaterThan level ZERO)
  
  printStars (subtract max level)
  
  if (lvl = ONE) `printPyramid (subtract level ONE) max`

  printStars (max - level)
}


>> char STAR
>> char NEWLINE
printStars ~int num {
  loop num {
    sysout STAR
  }

  sysout NEWLINE
}