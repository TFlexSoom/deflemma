from syslib import sysout

@exec main {
  printPyramid (LEVELS - ONE) LEVELS 
}

printPyramid ~int lvl ~int max {
  returnif (lvl < ZERO)

  printStars (max - lvl)

  if (lvl = ONE) {
    printPyramid (lvl - ONE) max
  }

  printStars (max - lvl)
}

printStars ~int num {
  loop num {
    sysout STAR
  }

  sysout NEWLINE
}