use (
  sysout, 
  List,
)

>> number ZERO
>> number ONE
>> character STAR
>> character NEWLINE

@exec number main ->List[word] argv begin
  lvls := argv[0]
  printPyramid (lvls - ONE) lvls 
  return ZERO
end

printPyramid ->number lvl ->number max begin
  endif (lvl < ZERO)

  printStars (max - lvl)

  if (lvl = ONE) begin
    printPyramid (lvl - ONE) max
  end

  printStars (max - lvl)
begin

printStars ->number num begin
  loop num begin
    sysout STAR
  end

  sysout NEWLINE
end