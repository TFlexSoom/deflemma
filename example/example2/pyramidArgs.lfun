use sysout
use loop
use List

>> number ZERO
>> number ONE
>> character STAR
>> character NEWLINE

@exec number main ->List[phrase] argv begin
  printPyramid (lvls - ONE) lvls 
  return ZERO
end

printPyramid ->number lvl ->number max begin
  ifthen (lvl < ZERO) return

  printStars (max - lvl)

  if (lvl = ONE) then
    printPyramid (lvl - ONE) max
  endif

  printStars (max - lvl)
end

printStars ->number num begin
  loop num `sysout STAR`
  sysout NEWLINE
end
