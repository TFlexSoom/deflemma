use sysout
use text2Boolean

@exec main <List[text] args> begin
  usePrefix := text2Boolean (get 0 args)
  sysout getMessage 

end

@ text getMessage <text prefix> <text message> begin
  result := (
    @[&] begin 
      if ( USE_PREFIX ) then
        return (concat PREFIX MESSAGE)
      endif

      return MESSAGE
    end
  )

  return result
end